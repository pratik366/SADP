import java.util.Observable;
import java.util.Observer;

// ---- WEATHER STATION (Observable) ----
class WeatherStation extends Observable {
    private float temperature;
    private float humidity;
    private float pressure;

    public void setMeasurements(float temperature, float humidity, float pressure) {
        this.temperature = temperature;
        this.humidity = humidity;
        this.pressure = pressure;
        setChanged();        // mark changed
        notifyObservers();   // notify observer
    }

    // Getters
    public float getTemperature() { return temperature; }
    public float getHumidity() { return humidity; }
    public float getPressure() { return pressure; }
}

// ---- DISPLAY (Observer) ----
class WeatherDisplay implements Observer {
    @Override
    public void update(Observable o, Object arg) {
        WeatherStation ws = (WeatherStation) o;
        System.out.println("Temp: " + ws.getTemperature() +
                           "Â°C, Humidity: " + ws.getHumidity() +
                           "%, Pressure: " + ws.getPressure());
    }
}

// ---- MAIN CLASS ----
public class Main {
    public static void main(String[] args) {

        WeatherStation ws = new WeatherStation();
        WeatherDisplay display = new WeatherDisplay();

        ws.addObserver(display);   // register display

        // update measurements
        ws.setMeasurements(30, 60, 1013);
        ws.setMeasurements(28, 65, 1012);
        ws.setMeasurements(25, 70, 1010);
    }
}
