// ---- Component Interface ----
interface Car {
    void assemble();
}

// ---- Concrete Component ----
class BasicCar implements Car {
    public void assemble() {
        System.out.println("Basic Car");
    }
}

// ---- Base Decorator ----
class CarDecorator implements Car {
    protected Car car;

    CarDecorator(Car c) {
        this.car = c;
    }

    public void assemble() {
        car.assemble();   // call original
    }
}

// ---- Sport Car Decorator ----
class SportsCar extends CarDecorator {
    SportsCar(Car c) {
        super(c);
    }

    public void assemble() {
        super.assemble();
        System.out.println("Adding features of Sports Car");
    }
}

// ---- Luxury Car Decorator ----
class LuxuryCar extends CarDecorator {
    LuxuryCar(Car c) {
        super(c);
    }

    public void assemble() {
        super.assemble();
        System.out.println("Adding features of Luxury Car");
    }
}

// ---- Test ----
public class Main {
    public static void main(String[] args) {

        System.out.println("Sports Car:");
        Car sc = new SportsCar(new BasicCar());
        sc.assemble();

        System.out.println("\nLuxury Car:");
        Car lc = new LuxuryCar(new BasicCar());
        lc.assemble();

        System.out.println("\nSports + Luxury Car:");
        Car slc = new SportsCar(new LuxuryCar(new BasicCar()));
        slc.assemble();
    }
}
